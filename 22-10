>>>>>>> Задача 9 <<<<<<<<
function sum(a) {
  let currentSum = a;
  function f(b) {
    currentSum += b;
    return f;
  }
  f.toString = function() {
    return currentSum;
  };
  return f;
}

>>>>>>> Задача 10 <<<<<<<<
function inBetween (a,b) {
  return function additionalFunc(elem){
    return ((elem >= a) && (elem <= b));
  };
}

