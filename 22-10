Задача 2

function checkAge(age) {
  
  return ((age > 18) ? true : confirm('Родители разрешили?'));

}

function checkAge(age) {
  
  return ((age > 18) || confirm('Родители разрешили?'));

}

Задача 3

function min(a,b) {
  return ((a < b) ? a : b);
}


Задача 4

function pow(x,n) {
  if ((n % 1 != 0) || (n < 1)){
    return alert('Степень должна быть натуральным числом');
  }
  let result = 1;
  for (let i = 0; i < n; i++) {
    result = result * x;
  }
  return result;
}

